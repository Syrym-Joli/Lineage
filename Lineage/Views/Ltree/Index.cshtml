
@{
    ViewBag.Title = "Index";
}
<link href="https://cdn.rawgit.com/Eonasdan/bootstrap-datetimepicker/e8bddc60e73c1ec2475f827be36e1957af72e2ea/build/css/bootstrap-datetimepicker.css" rel="stylesheet">
<div class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong>Ура!</strong> Вы успешно зарегистрировались в <b>Lineage</b>
</div>
    <div class="dropdown">
        <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">
            @if (User.Identity.IsAuthenticated)
            {
                <img src="~/Content/assets/img/about.jpg" class="img-circle" height="60" width="60">
                @User.Identity.Name
            }
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li role="presentation" class="dropdown-header">Название меню</li>
            <li><a href="#">Профиль</a></li>
            <li><a href="#">Редактировать</a></li>
            <li role="presentation" class="divider"></li>
            <li role="presentation" class="dropdown-header">Название меню</li>
            <li><a href="#">...</a></li>
        </ul>
    </div>
<br />


<br />
<div class="btn-group btn-group-justified">
    <div class="btn-group">
        <button type="button" class="btn btn-default btn-lg" data-toggle="modal" data-target="#myModalAdd"><span class="glyphicon glyphicon-user"></span> Add</button>
    </div>
    <div class="btn-group">
        <button type="button" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-pencil"></span> Edit</button>
    </div>
    <div class="btn-group">
            <button class="btn btn-default btn-lg dropdown-toggle" data-toggle="dropdown">
                <span class="glyphicon glyphicon-download"></span>
                Download
            </button>
            <ul class="dropdown-menu">
                <li role="presentation" class="dropdown-header">Форматы:</li>
                <li><a href="#">PDF</a></li>
                <li><a href="#">JPG</a></li>
            </ul>
    </div>
</div>
<div class="modal fade" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Lineage</h4>
            </div>
            <div class="modal-body">
                <h4>Add...2</h4>
                <div class="container">
                    <div class="row">
                        <div class='col-md-4'>
                            <br />
                            <div class="btn-group">
                                <button type="button" class="btn btn-default">Тип связи</button>
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                    <span class="sr-only">Меню с переключением</span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Мама</a></li>
                                    <li><a href="#">Папа</a></li>
                                    <li><a href="#">Бабушка</a></li>
                                    <li><a href="#">Дедушка</a></li>
                                    <li><a href="#">Тётя</a></li>
                                    <li><a href="#">Дядя</a></li>
                                </ul>
                            </div>
                            <br /><br />
                            <input type="text" class="form-control" placeholder="Имя" id="name">
                            <br />
                            <input type="text" class="form-control" placeholder="Фамилия" id="surName">
                            <br />
                            <input type="text" class="form-control" placeholder="Отчество" id="middleName">
                            <br />
                            <div class="container">
                                <div class="row">
                                    <div class='col-sm-3'>
                                        <div class="form-group">
                                            <div class='input-group date' id='datetimepicker1'>

                                                <input type='text' class="form-control" placeholder="Дата рождения" />
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <script type="text/javascript">
                                        $(function () {
                                            $('#datetimepicker1').datetimepicker();
                                        });
                                    </script>
                                </div>
                            </div>
                        </div>
                        <div class='col-md-4'>
                            <br />
                            <img src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" class="round" width="100" height="100">
                            <br /><br />
                            <label class="btn btn-default btn-file">
                                <span class="glyphicon glyphicon-picture"></span> Photo <input type="file" style="display: none;">
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="sign_up">Add</button>
            </div>
        </div>
    </div>
</div>
<br />

<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">
            Генеалогическое древо
        </h3>
    </div>
    <div class="panel-body">
        <br />
        <script>
            $(function () {
                $("#draggable").draggable();
            });
        </script>

            <!-- Treant -->
            <div class="chart" id="custom-colored"></div>
        <br />
        <br />
        <script>
            $(function () {
                $('[data-toggle="popover"]').popover();
            });
        </script>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment-with-locales.js"></script>
<script src="https://cdn.rawgit.com/Eonasdan/bootstrap-datetimepicker/e8bddc60e73c1ec2475f827be36e1957af72e2ea/src/js/bootstrap-datetimepicker.js"></script>
<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script src="~/Scripts/treant/vendor/raphael.js"></script>
<script src="~/Scripts/treant/Treant.js"></script>
<script src="~/Scripts/treant/MyTree.js"></script>

<!-- particles.js lib -->
<script src="http://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
<script src="~/Scripts/particles.js"></script>
<script>
    new Treant(chart_config)
</script>


